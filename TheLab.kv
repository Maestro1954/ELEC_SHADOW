        orientation: "vertical"
        size_hint: .2, .2
        spacing: "5dp"
        Button:
            text: "Capture"
            on_press: root.on_button_click()
        Button:
            text: "Video"
            on_press: root.on_button_click()
        Button:
            text: "Overlay"
            on_press: root.on_button_click()
        Button:
            text: "Zoom"
            on_press: root.on_button_click()
        Button:
            text: "Export"
            on_press: root.on_button_click()


